<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.cooper.scorekeeper.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/basketball_background" />

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="Basketball Scorekeeper"
        android:visibility="visible" />

    <TextView
        android:id="@+id/home_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_marginTop="82dp"
        android:layout_toLeftOf="@id/header"
        android:text="TextView" />

    <TextView
        android:id="@+id/visitor_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/home_score"
        android:layout_toRightOf="@id/header"
        android:text="TextView" />

    <Button
        android:id="@+id/points_2_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="Button" />

    <Button
        android:id="@+id/free_throw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/points_2_goal"
        android:layout_alignBottom="@+id/points_2_goal"
        android:layout_alignRight="@+id/home_score"
        android:text="Button" />

    <Button
        android:id="@+id/points_3_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/points_2_goal"
        android:layout_alignBottom="@id/points_2_goal"
        android:layout_alignLeft="@id/visitor_score"
        android:text="Button" />

    <Button
        android:id="@+id/team_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/free_throw"
        android:layout_alignLeft="@id/free_throw"
        android:text="Button" />

</RelativeLayout>
